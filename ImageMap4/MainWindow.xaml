<Window x:Class="ImageMap4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageMap4"
        mc:Ignorable="d"
        Title="Image Map"
        Height="540"
        Width="900"
        FontSize="18"
        Closing="Window_Closing">
    <Window.DataContext>
        <local:MainViewModel />
    </Window.DataContext>
    <Window.Resources>
        <ResourceDictionary>
            <BitmapImage x:Key="MapBackground"
                         UriSource="../Icons/item_frame.png" />
            <Style x:Key="WorldCard"
                   TargetType="ListViewItem">
                <Style.Triggers>
                    <Trigger Property="IsSelected"
                             Value="True">
                        <Setter Property="Background"
                                Value="#CCDDFF" />
                    </Trigger>
                </Style.Triggers>
                <Setter Property="Background"
                        Value="#E5E5E5" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ListViewItem">
                            <Border Background="{TemplateBinding Background}"
                                    Height="60"
                                    CornerRadius="4"
                                    Margin="2,2,2,2">
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="{Binding Path=WorldIcon}"
                                           Height="60" />
                                    <StackPanel>
                                        <TextBlock Text="{Binding Name}"
                                                   Foreground="Black"
                                                   FontWeight="Medium"
                                                   FontSize="17"
                                                   Margin="4,2,0,0" />
                                        <TextBlock Text="{Binding FolderName}"
                                                   Foreground="Gray"
                                                   FontSize="15"
                                                   Margin="4,2,0,0" />
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            <DataTemplate x:Key="MapCard">
                <StackPanel Margin="3"
                            Width="128"
                            Background="#DDDDDD">
                    <StackPanel.Style>
                        <Style TargetType="StackPanel">
                            <Setter Property="Visibility"
                                    Value="Visible" />
                            <Style.Triggers>
                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding Data.IsEmpty}"
                                                   Value="True" />
                                        <Condition Binding="{Binding DataContext.ShowEmptyMaps, RelativeSource={RelativeSource AncestorType=Window}}"
                                                   Value="False" />
                                    </MultiDataTrigger.Conditions>
                                    <Setter Property="Visibility"
                                            Value="Collapsed" />
                                </MultiDataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>
                    <Grid>
                        <Image Source="{StaticResource MapBackground}"
                               RenderOptions.BitmapScalingMode="NearestNeighbor"
                               Margin="1" />
                        <Image RenderOptions.BitmapScalingMode="NearestNeighbor">
                            <Image.Style>
                                <Style TargetType="Image">
                                    <Setter Property="Source"
                                            Value="{Binding Data.ImageSource}" />
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver"
                                                 Value="True">
                                            <Setter Property="Source"
                                                    Value="{Binding Data.OriginalSource}" />
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Image.Style>
                        </Image>
                    </Grid>
                    <TextBlock Text="{Binding ID, StringFormat=map_{0}}"
                               Foreground="Black"
                               FontWeight="Medium"
                               FontSize="13"
                               Margin="4,0,0,4" />
                </StackPanel>
            </DataTemplate>
        </ResourceDictionary>
    </Window.Resources>
    <TabControl>
        <TabItem Header="Worlds">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Button Grid.Column="0"
                        Grid.Row="1"
                        Padding="5"
                        Content="Java Worlds"
                        Click="JavaFolder_Click" />
                <Button Grid.Column="1"
                        Grid.Row="1"
                        Padding="5"
                        Content="Bedrock Worlds"
                        Click="BedrockFolder_Click" />
                <ListView Grid.Column="0"
                          Grid.Row="0"
                          ItemsSource="{Binding JavaWorlds}"
                          SelectedItem="{Binding SelectedWorld}"
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                          ItemContainerStyle="{StaticResource WorldCard}" />
                <ListView Grid.Column="1"
                          Grid.Row="0"
                          ItemsSource="{Binding BedrockWorlds}"
                          SelectedItem="{Binding SelectedWorld}"
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                          ItemContainerStyle="{StaticResource WorldCard}" />
            </Grid>
        </TabItem>
        <TabItem Header="Maps">
            <TabItem.Style>
                <Style TargetType="TabItem">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding SelectedWorld}"
                                     Value="{x:Null}">
                            <DataTrigger.Setters>
                                <Setter Property="Visibility"
                                        Value="Collapsed" />
                            </DataTrigger.Setters>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TabItem.Style>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <StackPanel Grid.Column="0"
                            Grid.Row="0">
                    <TextBlock Text="Importing" />
                    <Button Content="Open"
                            Click="OpenButton_Click" />
                </StackPanel>
                <ScrollViewer Grid.Column="0"
                              Grid.Row="1">
                    <ItemsControl ItemsSource="{Binding ImportingMaps}"
                                  ItemTemplate="{StaticResource MapCard}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                </ScrollViewer>
                <StackPanel Grid.Column="1"
                            Grid.Row="0">
                    <TextBlock Text="{Binding ExistingMaps.Count, StringFormat=In World – {0} maps}" />
                    <CheckBox Content="Show Empty Maps"
                              IsChecked="{Binding ShowEmptyMaps}"
                              FontSize="16"
                              VerticalContentAlignment="Center" />
                </StackPanel>
                <ScrollViewer Grid.Column="1"
                              Grid.Row="1">
                    <ItemsControl ItemsSource="{Binding ExistingMaps}"
                                  ItemTemplate="{StaticResource MapCard}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </TabItem>
    </TabControl>
</Window>
