<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:imageMap4="clr-namespace:ImageMap4"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ImageMap4.MapList">
    <UserControl.Resources>
        <DataTemplate x:Key="MapCard">
            <StackPanel Margin="3">
                <imageMap4:MapPreview DataContext="{Binding Item.Data}"
                                  Width="128"
                                  Height="128"
                                  Margin="4" />
                <DockPanel>
                    <TextBlock Text="{Binding Item.ID, StringFormat=map_{0}}"
                               Foreground="Black"
                               FontWeight="Medium"
                               FontSize="13"
                               Margin="4,0,0,4" />
                    <ContentPresenter ContentTemplate="{Binding Status, ElementName=This}" />
                </DockPanel>
            </StackPanel>
        </DataTemplate>
    </UserControl.Resources>
    <ListBox Items="{Binding}"
             ItemTemplate="{StaticResource MapCard}" />
</UserControl>